<h1> Novo Item do Pedido <%= @order.code %> </h1>

<% if (@order_item.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
    <li><%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: [@order, @order_item]) do |f| %>
  <div>
    <%= f.label :product_model_id, 'Produto' %>
    <%= f.collection_select :product_model_id, @products, :id, :name%>
  </div>
  <div>
    <%= f.label :quantity, 'Quantidade' %>
    <%= f.text_field :quantity %>
  </div>
  <%= f.submit 'Gravar' %>
<% end %>