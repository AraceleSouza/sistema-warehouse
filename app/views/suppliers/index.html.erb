<section id = "suppliers">
<h1>Fornecedores</h1>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Localização</th>
      </tr>
    </thead>
    
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= link_to supplier.brand_name %></td>
          <td><%= supplier.city %> - <%= supplier.state %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
<% if @suppliers.empty? %>
  <p>Não existem fornecedores cadastrados.</p>
<% end %>

<div>
<%= link_to 'Cadastrar novo fornecedor' %>
</div>
</section>
